<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.browser.app.modular.hbase.dao.AddressTransactionMapper">

    <sql id="Base_Column_List">
      address,
      volume
    </sql>

    <select id="selectByAddress" resultType="com.xyz.browser.app.modular.hbase.model.AddressTransaction">
        select
        <include refid="Base_Column_List" />
        from vns.address_transaction
        <where>
            address = '${_parameter}'
        </where>
    </select>


</mapper>
